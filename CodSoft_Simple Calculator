#include <iostream>
using namespace std;

int main() {
    double a, b;
    char op;

    cout << "Enter first number: ";
    cin >> a;

    cout << "Enter second number: ";
    cin >> b;

    cout << "Choose operation (+, -, *, /): ";
    cin >> op;

    switch(op) {
        case '+':
            cout << "Result = " << a + b;
            break;
        case '-':
            cout << "Result = " << a - b;
            break;
        case '*':
            cout << "Result = " << a * b;
            break;
        case '/':
            if (b != 0)
                cout << "Result = " << a / b;
            else
                cout << "Error: Division by zero not allowed";
            break;
        default:
            cout << "Invalid operation";
    }

    return 0;
}
